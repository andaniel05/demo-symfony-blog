
{% extends 'layout.html.twig' %}

{% block content %}
<div id="app">
    <!-- Page Heading -->
    <div class="row" style="margin: 50px 0px">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                <li class="active"><a href="javascript:;">All</a></li>
                {% verbatim %}
                    <li v-for="category in categories">
                        <a href="javascript:;">{{ category.name }}</a>
                    </li>
                {% endverbatim %}
            </ul>
        </div>
    </div>
    <!-- /.row -->

    {% verbatim %}
        <!-- Project One -->
        <div class="row" v-for="article in articles">
            <div class="col-md-7">
                <a href="javascript:;">
                    <img class="img-responsive" src="" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>{{ article.title }}</h3>
                <ul>
                    <li v-for="category in article.categories">
                        <a href="javascript:;">{{ category.name }}</a>
                    </li>
                </ul>
                <p>{{ article.extract }}</p>
                <a class="btn btn-primary" href="javascript:;">{{ 'button.read_more'|trans }} <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->

        <hr>
    {% endverbatim %}

    {% verbatim %}
        <!-- Begin load more articles -->
        <div class="row text-center" v-if="incomplete">
            <div class="col-lg-12">
                <a href="javascript:;" class="btn btn-primary btn-lg">{{ 'button.load_more_articles'|trans }}</a>
            </div>
        </div>
        <!-- End load more articles -->
    {% endverbatim %}

    <hr>
</div>
{% endblock %}

{% block page_scripts %}
    <script src="{{ asset('assets/vendor/gasparesganga-jquery-loading-overlay/src/loadingoverlay.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/vue/dist/vue.min.js') }}"></script>
    <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}