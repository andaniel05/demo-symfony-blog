
{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">

            <!-- Title -->
            <h1 class="title-article">{{ article.title }}</h1>

            <!-- Author -->
            <p class="lead author-article">
                {{ 'label.author'|trans({ '%author%': article.author.username }) }}
            </p>

            <hr>

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> {{ 'label.date'|trans({ '%date%': article.date.format('d-m-Y H:i:s') }) }}</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive image-article" src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="">

            <hr>

            <!-- Post Content -->
            <div class="content-article">
                {{ article.content|raw }}
            </div>

            <hr>

        </div>
    </div>
{% endblock %}